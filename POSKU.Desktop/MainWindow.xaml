<Window x:Class="POSKU.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="POSKU - Produk" Height="520" Width="880" WindowStartupLocation="CenterScreen">
    <DockPanel Margin="12">

        <!-- Form input -->
        <Grid DockPanel.Dock="Top" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                <TextBlock Text="SKU" Margin="0,0,0,4"/>
                <TextBox Text="{Binding Sku, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="8,0,8,0">
                <TextBlock Text="Nama" Margin="0,0,0,4"/>
                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel Grid.Column="2" Margin="8,0,8,0">
                <TextBlock Text="Harga" Margin="0,0,0,4"/>
                <TextBox Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel Grid.Column="3" Margin="8,0,8,0">
                <TextBlock Text="Stok" Margin="0,0,0,4"/>
                <TextBox Text="{Binding Stock, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <Button Grid.Column="4" Content="Tambah" Padding="16,6" Margin="12,18,0,0"
                    Command="{Binding AddProductCommand}"/>
        </Grid>

        <!-- Tabel produk -->
        <DataGrid ItemsSource="{Binding Products}" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Sku}"   Header="SKU"   Width="*" />
                <DataGridTextColumn Binding="{Binding Name}"  Header="Nama"  Width="2*" />
                <DataGridTextColumn Binding="{Binding Price}" Header="Harga" Width="*" />
                <DataGridTextColumn Binding="{Binding Stock}" Header="Stok"  Width="*" />
                <DataGridCheckBoxColumn Binding="{Binding IsActive}" Header="Aktif" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

    </DockPanel>
</Window>
