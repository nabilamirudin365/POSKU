<Window x:Class="POSKU.Desktop.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Laporan Penjualan Harian" Height="450" Width="700">
  <DockPanel Margin="12">
    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
      <DatePicker SelectedDate="{Binding Date}" Width="160" />
      <Button Content="Refresh" Margin="8,0,0,0" Padding="12,6" Command="{Binding RefreshCommand}"/>
      <TextBlock Text="   Total Nota:" Margin="18,0,6,0" VerticalAlignment="Center"/>
      <TextBlock Text="{Binding Count}" FontWeight="Bold" VerticalAlignment="Center"/>
      <TextBlock Text="   Grand Total:" Margin="18,0,6,0" VerticalAlignment="Center"/>
      <TextBlock Text="{Binding SumGrand, StringFormat=N0}" FontWeight="Bold" VerticalAlignment="Center"/>
    </StackPanel>

    <DataGrid ItemsSource="{Binding Rows}" AutoGenerateColumns="False" IsReadOnly="True">
      <DataGrid.Columns>
        <DataGridTextColumn Header="No" Binding="{Binding Number}" Width="2*"/>
        <DataGridTextColumn Header="Tanggal" Binding="{Binding Date}" Width="*" />
        <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal, StringFormat=N0}" Width="*" />
        <DataGridTextColumn Header="Diskon" Binding="{Binding DiscountTotal, StringFormat=N0}" Width="*" />
        <DataGridTextColumn Header="Grand Total" Binding="{Binding GrandTotal, StringFormat=N0}" Width="*" />
      </DataGrid.Columns>
    </DataGrid>
  </DockPanel>
</Window>
